@using ETicaret.Entity
@model IEnumerable<Product> 
<h3>Çok Satılanlar</h3>
<ul class="nav nav-list promowrapper">
    @foreach (var item in Model)
    {
        <li>
            <div class="thumbnail">


                <a href="/Home/ProductDetails/@item.Id"><img src="~/Content/image/@item.Image" style="max-width:207px;max-height:206px; min-width:207px;min-height:267px;" alt=""></a>
                <div class="caption cntr">
                    <p>@item.Name</p>
                    <p><strong> @item.Price (₺)</strong></p>
                    <h4><a class="shopBtn" href="/Home/ProductDetails/@item.Id" title="add to cart"> Görüntüle </a></h4>
                </div>
            </div>
        </li>
        <li style="border:0"> &nbsp;</li>
    }


</ul>
